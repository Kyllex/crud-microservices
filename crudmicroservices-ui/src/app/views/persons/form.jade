h2 Persons

form.form(name="form")
  .form-group
    label(for="name") Name
    input.form-control#name(type="text" placeholder="Name" ng-model="vm.model.name" required)
    
  .form-group
    label(for="phoneNumber") Phone
    input.form-control#phoneNumber(type="text" placeholder="Phone" ng-model="vm.model.phoneNumber" required)
    
  .group
    button.btn.btn-success(ng-click="vm.save()" ng-disabled="form.$invalid" type="button") 
      i.fa.fa-save
      |  Save
      
    a.btn.btn-warning(ui-sref="^" role="button") 
      i.fa.fa-close
      |  Cancel
